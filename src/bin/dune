 (name native)
 (public_name mlsem)
 (package mlsem-bin)
 (libraries mlsem_app unix)
 (modes
  (best exe))
 (modules native))

(library
 (name web)
 (wrapped false)
 (libraries mlsem_app yojson)
 (preprocess
  (pps js_of_ocaml-ppx))
 (modules web))

(executable
 (name js)
 (libraries web zarith_js)
 (modes js)
 (modules js))

(executable
 (name wasm)
 (libraries web zarith_wasm)
 (modes wasm)
 (modules wasm))

(env
 (_
  (js_of_ocaml
   (flags
    (:standard --effects=cps))
   (compilation_mode whole_program)
   (build_runtime_flags
    (:standard --effects=cps)))
  (wasm_of_ocaml
   (flags
    (:standard --effects=cps))
   (compilation_mode whole_program)
   (build_runtime_flags
    (:standard --effects=cps)))
